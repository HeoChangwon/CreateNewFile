<Application x:Class="CreateNewFile.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:CreateNewFile"
             xmlns:utils="clr-namespace:CreateNewFile.Utils"
             StartupUri="Views/MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- 필요시 추가 리소스 딕셔너리 -->
            </ResourceDictionary.MergedDictionaries>
            
            <!-- 컨버터들 -->
            <utils:InvertBooleanConverter x:Key="InvertBooleanConverter"/>
            <utils:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
            <utils:InvertBooleanToVisibilityConverter x:Key="InvertBooleanToVisibilityConverter"/>
            <utils:StringToVisibilityConverter x:Key="StringToVisibilityConverter"/>
            <utils:FileSizeConverter x:Key="FileSizeConverter"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>
