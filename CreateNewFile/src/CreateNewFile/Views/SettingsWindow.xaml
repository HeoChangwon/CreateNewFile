<Window x:Class="CreateNewFile.Views.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="설정 관리" Height="700" Width="750"
        WindowStartupLocation="Manual"
        MinHeight="300" MinWidth="750"
        Icon="pack://application:,,,/Resources/CreateNewFile.ico">
    
    <Window.Resources>
        <!-- 설정 윈도우 전용 스타일 -->
        <Style TargetType="Label">
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,2"/>
        </Style>
        
        <Style TargetType="TextBox">
            <Setter Property="Height" Value="28"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="6,2"/>
            <Setter Property="Margin" Value="2"/>
        </Style>
        
        <Style TargetType="Button">
            <Setter Property="Height" Value="28"/>
            <Setter Property="Padding" Value="10,2"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="Background" Value="#FF007ACC"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF005A9B"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="LightGray"/>
                    <Setter Property="Foreground" Value="DarkGray"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <Style x:Key="SecondaryButton" TargetType="Button">
            <Setter Property="Height" Value="28"/>
            <Setter Property="Padding" Value="10,2"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="Background" Value="LightGray"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="Gray"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="DarkGray"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <Style x:Key="DangerButton" TargetType="Button">
            <Setter Property="Height" Value="28"/>
            <Setter Property="Padding" Value="10,2"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="Background" Value="#FFDC3545"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FFC82333"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <!-- 리스트 아이템 스타일 -->
        <Style TargetType="ListViewItem">
            <Setter Property="Margin" Value="1"/>
            <Setter Property="Padding" Value="5"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FFE6F3FF"/>
                    <Setter Property="Foreground" Value="Black"/>
                </Trigger>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#FF007ACC"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
                <MultiTrigger>
                    <MultiTrigger.Conditions>
                        <Condition Property="IsSelected" Value="True"/>
                        <Condition Property="IsMouseOver" Value="True"/>
                    </MultiTrigger.Conditions>
                    <Setter Property="Background" Value="#FF005A9B"/>
                    <Setter Property="Foreground" Value="White"/>
                </MultiTrigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- 상단 제목 -->
        <TextBlock Grid.Row="0" Text="설정 관리" 
                   FontSize="20" FontWeight="Bold" 
                   HorizontalAlignment="Center" 
                   Margin="0,0,0,15"/>
        
        <!-- 메인 컨텐츠 영역 -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- 좌측 항목 타입 선택 -->
            <GroupBox Grid.Column="0" Header="항목 타입">
                <ListBox ItemsSource="{Binding PresetTypes}"
                         SelectedItem="{Binding SelectedPresetTypeInfo, Mode=TwoWay}"
                         DisplayMemberPath="DisplayName">
                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem">
                            <Setter Property="Padding" Value="8"/>
                            <Setter Property="Margin" Value="1"/>
                        </Style>
                    </ListBox.ItemContainerStyle>
                </ListBox>
            </GroupBox>
            
            <!-- 우측 항목 관리 영역 -->
            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- 항목 추가 영역 -->
                <GroupBox Grid.Row="0" Header="새 항목 추가">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <Label Grid.Column="0" Content="값:" Width="40"/>
                        <TextBox Grid.Column="1" 
                                Text="{Binding NewItemValue, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                Margin="0,0,10,0"/>
                        
                        <Button Grid.Column="2" Content="추가"
                               Command="{Binding AddItemCommand}"
                               Width="60"/>
                        <Button Grid.Column="3" Content="수정"
                               Command="{Binding EditItemCommand}"
                               Width="60"
                               Style="{StaticResource SecondaryButton}"/>
                    </Grid>
                </GroupBox>
                
                <!-- 항목 목록 -->
                <GroupBox Grid.Row="1" Header="{Binding SelectedPresetTypeDisplayName, StringFormat='{}{0} 항목 목록'}" Margin="0,10,0,0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <!-- 리스트뷰 -->
                        <ListView Grid.Row="0" 
                                 ItemsSource="{Binding CurrentItems}"
                                 SelectedItem="{Binding SelectedItem, Mode=TwoWay}"
                                 SelectionMode="Extended"
                                 Name="ItemsListView">
                            <ListView.View>
                                <GridView>
                                    <GridViewColumn Header="값" Width="300" DisplayMemberBinding="{Binding Value}"/>
                                </GridView>
                            </ListView.View>
                        </ListView>
                        
                        <!-- 항목 관리 버튼 -->
                        <StackPanel Grid.Row="1" Orientation="Horizontal" 
                                   HorizontalAlignment="Right" 
                                   Margin="0,10,0,0">
                            <Button Content="선택 삭제" 
                                   Command="{Binding DeleteSelectedItemsCommand}"
                                   Width="80"
                                   Margin="0,0,10,0"
                                   Style="{StaticResource DangerButton}"/>
                            <Button Content="삭제" 
                                   Command="{Binding DeleteItemCommand}"
                                   Width="60"
                                   Style="{StaticResource DangerButton}"/>
                        </StackPanel>
                    </Grid>
                </GroupBox>
                
            </Grid>
        </Grid>
        
        <!-- 상태 표시줄 -->
        <Border Grid.Row="2" Background="LightGray" Padding="10,5" Margin="0,10,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Column="0" Text="{Binding StatusMessage}" 
                          VerticalAlignment="Center"/>
                <ProgressBar Grid.Column="1" 
                            IsIndeterminate="{Binding IsWorking}"
                            Visibility="{Binding IsWorking, Converter={StaticResource BooleanToVisibilityConverter}}"
                            Width="100" Height="16"/>
            </Grid>
        </Border>
        
        <!-- 하단 버튼 영역 -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" 
                   HorizontalAlignment="Right" 
                   Margin="0,10,0,0">
            <Button Content="닫기" 
                   Command="{Binding CancelSettingsCommand}"
                   Width="80" Height="35"
                   FontSize="14"/>
        </StackPanel>
    </Grid>
</Window>