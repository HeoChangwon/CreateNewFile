<Window x:Class="CreateNewFile.Views.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="설정 관리" Height="700" Width="900"
        WindowStartupLocation="CenterScreen"
        MinHeight="500" MinWidth="700">
    
    <Window.Resources>
        <!-- 설정 윈도우 전용 스타일 -->
        <Style TargetType="Label">
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,2"/>
        </Style>
        
        <Style TargetType="TextBox">
            <Setter Property="Height" Value="28"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="6,2"/>
            <Setter Property="Margin" Value="2"/>
        </Style>
        
        <Style TargetType="Button">
            <Setter Property="Height" Value="28"/>
            <Setter Property="Padding" Value="10,2"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="Background" Value="#FF007ACC"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF005A9B"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="LightGray"/>
                    <Setter Property="Foreground" Value="DarkGray"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <Style x:Key="SecondaryButton" TargetType="Button">
            <Setter Property="Height" Value="28"/>
            <Setter Property="Padding" Value="10,2"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="Background" Value="LightGray"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="Gray"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="DarkGray"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <Style x:Key="DangerButton" TargetType="Button">
            <Setter Property="Height" Value="28"/>
            <Setter Property="Padding" Value="10,2"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="Background" Value="#FFDC3545"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FFC82333"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <!-- 리스트 아이템 스타일 -->
        <Style TargetType="ListViewItem">
            <Setter Property="Margin" Value="1"/>
            <Setter Property="Padding" Value="5"/>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#FF007ACC"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FFE6F3FF"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- 상단 제목 -->
        <TextBlock Grid.Row="0" Text="설정 관리" 
                   FontSize="20" FontWeight="Bold" 
                   HorizontalAlignment="Center" 
                   Margin="0,0,0,15"/>
        
        <!-- 메인 컨텐츠 영역 -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- 좌측 항목 타입 선택 -->
            <GroupBox Grid.Column="0" Header="항목 타입">
                <ListBox ItemsSource="{Binding PresetTypes}"
                         SelectedItem="{Binding SelectedPresetType, Mode=TwoWay}"
                         DisplayMemberPath="DisplayName">
                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem">
                            <Setter Property="Padding" Value="8"/>
                            <Setter Property="Margin" Value="1"/>
                        </Style>
                    </ListBox.ItemContainerStyle>
                </ListBox>
            </GroupBox>
            
            <!-- 우측 항목 관리 영역 -->
            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- 항목 추가 영역 -->
                <GroupBox Grid.Row="0" Header="새 항목 추가">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="10"/>
                        </Grid.RowDefinitions>
                        
                        <Label Grid.Row="0" Grid.Column="0" Content="값:" Width="40"/>
                        <TextBox Grid.Row="0" Grid.Column="1" 
                                Text="{Binding NewItemValue, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                Margin="0,0,10,0"/>
                        
                        <Label Grid.Row="0" Grid.Column="2" Content="설명:" Width="40"/>
                        <TextBox Grid.Row="0" Grid.Column="3" 
                                Text="{Binding NewItemDescription, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                Margin="0,0,10,0"/>
                        
                        <Button Grid.Row="0" Grid.Column="4" Content="추가"
                               Command="{Binding AddItemCommand}"
                               Width="60"/>
                    </Grid>
                </GroupBox>
                
                <!-- 항목 목록 -->
                <GroupBox Grid.Row="1" Header="항목 목록" Margin="0,10,0,0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <!-- 리스트뷰 -->
                        <ListView Grid.Row="0" 
                                 ItemsSource="{Binding CurrentItems}"
                                 SelectedItem="{Binding SelectedItem, Mode=TwoWay}">
                            <ListView.View>
                                <GridView>
                                    <GridViewColumn Header="즐겨찾기" Width="70">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <CheckBox IsChecked="{Binding IsFavorite}"
                                                         Command="{Binding DataContext.ToggleFavoriteCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                         CommandParameter="{Binding}"
                                                         HorizontalAlignment="Center"/>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                    
                                    <GridViewColumn Header="활성" Width="50">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <CheckBox IsChecked="{Binding IsEnabled}"
                                                         Command="{Binding DataContext.ToggleEnabledCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                         CommandParameter="{Binding}"
                                                         HorizontalAlignment="Center"/>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                    
                                    <GridViewColumn Header="값" Width="150" DisplayMemberBinding="{Binding Value}"/>
                                    <GridViewColumn Header="설명" Width="200" DisplayMemberBinding="{Binding Description}"/>
                                    <GridViewColumn Header="사용 횟수" Width="80" DisplayMemberBinding="{Binding UsageCount}"/>
                                    <GridViewColumn Header="마지막 사용" Width="120">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding LastUsed, StringFormat='yyyy-MM-dd'}"/>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                </GridView>
                            </ListView.View>
                        </ListView>
                        
                        <!-- 항목 관리 버튼 -->
                        <StackPanel Grid.Row="1" Orientation="Horizontal" 
                                   HorizontalAlignment="Right" 
                                   Margin="0,10,0,0">
                            <Button Content="수정" 
                                   Command="{Binding EditItemCommand}"
                                   Width="60"
                                   Style="{StaticResource SecondaryButton}"/>
                            <Button Content="삭제" 
                                   Command="{Binding DeleteItemCommand}"
                                   Width="60"
                                   Style="{StaticResource DangerButton}"/>
                        </StackPanel>
                    </Grid>
                </GroupBox>
                
                <!-- 선택된 항목 정보 (옵션) -->
                <GroupBox Grid.Row="2" Header="선택된 항목 정보" 
                         Visibility="{Binding SelectedItem, Converter={StaticResource StringToVisibilityConverter}}"
                         Margin="0,10,0,0">
                    <Grid DataContext="{Binding SelectedItem}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <Label Grid.Row="0" Grid.Column="0" Content="생성일:"/>
                        <TextBlock Grid.Row="0" Grid.Column="1" 
                                  Text="{Binding CreatedAt, StringFormat='yyyy-MM-dd HH:mm'}"
                                  VerticalAlignment="Center" Margin="5,0"/>
                        
                        <Label Grid.Row="0" Grid.Column="2" Content="사용 통계:"/>
                        <TextBlock Grid.Row="0" Grid.Column="3" 
                                  Text="{Binding UsageInfo}"
                                  VerticalAlignment="Center" Margin="5,0"/>
                        
                        <Label Grid.Row="1" Grid.Column="0" Content="ID:"/>
                        <TextBlock Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="3"
                                  Text="{Binding Id}"
                                  VerticalAlignment="Center" Margin="5,0"
                                  FontFamily="Consolas" FontSize="10"
                                  Foreground="Gray"/>
                    </Grid>
                </GroupBox>
            </Grid>
        </Grid>
        
        <!-- 상태 표시줄 -->
        <Border Grid.Row="2" Background="LightGray" Padding="10,5" Margin="0,10,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Column="0" Text="{Binding StatusMessage}" 
                          VerticalAlignment="Center"/>
                <ProgressBar Grid.Column="1" 
                            IsIndeterminate="{Binding IsWorking}"
                            Visibility="{Binding IsWorking, Converter={StaticResource BooleanToVisibilityConverter}}"
                            Width="100" Height="16"/>
            </Grid>
        </Border>
        
        <!-- 하단 버튼 영역 -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" 
                   HorizontalAlignment="Right" 
                   Margin="0,10,0,0">
            <Button Content="저장" 
                   Command="{Binding SaveSettingsCommand}"
                   Width="80" Height="35"
                   FontSize="14"/>
            <Button Content="취소" 
                   Command="{Binding CancelSettingsCommand}"
                   Width="80" Height="35"
                   FontSize="14"
                   Style="{StaticResource SecondaryButton}"/>
        </StackPanel>
    </Grid>
</Window>