<Window x:Class="CreateNewFile.Views.FileInfoManagerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CreateNewFile"
        xmlns:converters="clr-namespace:CreateNewFile.Utils"
        mc:Ignorable="d"
        Title="파일정보 관리" Height="749" Width="1113"
        WindowStartupLocation="CenterOwner"
        ShowInTaskbar="False"
        Icon="pack://application:,,,/Resources/CreateNewFile.ico">
    
    <Window.Resources>
        <!-- 컨버터 -->
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        
        <!-- 공통 스타일 -->
        <Style TargetType="Button">
            <Setter Property="Height" Value="32"/>
            <Setter Property="Padding" Value="12,4"/>
            <Setter Property="Margin" Value="4,2"/>
            <Setter Property="Background" Value="#FF007ACC"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF005A9B"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="LightGray"/>
                    <Setter Property="Foreground" Value="DarkGray"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <Style x:Key="SecondaryButton" TargetType="Button">
            <Setter Property="Height" Value="32"/>
            <Setter Property="Padding" Value="12,4"/>
            <Setter Property="Margin" Value="4,2"/>
            <Setter Property="Background" Value="LightGray"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="Gray"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="DarkGray"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <Style x:Key="DangerButton" TargetType="Button">
            <Setter Property="Height" Value="32"/>
            <Setter Property="Padding" Value="12,4"/>
            <Setter Property="Margin" Value="4,2"/>
            <Setter Property="Background" Value="#FFDC3545"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FFC82333"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="LightGray"/>
                    <Setter Property="Foreground" Value="DarkGray"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- 헤더 -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" 
                    HorizontalAlignment="Left" 
                    Margin="0,0,0,20">
            <Image Source="pack://application:,,,/Resources/CreateNewFile.png"
                   Width="32" Height="32"
                   Margin="0,0,10,0"
                   VerticalAlignment="Center"/>
            <StackPanel VerticalAlignment="Center">
                <TextBlock Text="파일정보 관리" 
                           FontSize="18" FontWeight="Bold"
                           Foreground="#FF007ACC"/>
                <TextBlock Text="저장된 파일정보를 관리할 수 있습니다" 
                           FontSize="12" 
                           Foreground="Gray"
                           Margin="0,-2,0,0"/>
            </StackPanel>
        </StackPanel>

        <!-- 메인 컨텐츠 -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            
            <!-- 왼쪽: 파일정보 목록 -->
            <GroupBox Grid.Column="0" Header="파일정보 목록" Padding="10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <!-- 버튼 그룹 -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                        <Button Content="새로고침" Command="{Binding RefreshCommand}" 
                               Style="{StaticResource SecondaryButton}"/>
                        <Button Content="이름 변경" Command="{Binding RenameCommand}" 
                               Style="{StaticResource SecondaryButton}"/>
                        <Button Content="복사" Command="{Binding DuplicateCommand}" 
                               Style="{StaticResource SecondaryButton}"/>
                        <Button Content="삭제" Command="{Binding DeleteCommand}" 
                               Style="{StaticResource DangerButton}"/>
                    </StackPanel>
                    
                    <!-- DataGrid -->
                    <DataGrid Grid.Row="1"
                             ItemsSource="{Binding FileInfos}"
                             SelectedItem="{Binding SelectedFileInfo, Mode=TwoWay}"
                             AutoGenerateColumns="False"
                             CanUserAddRows="False"
                             CanUserDeleteRows="False"
                             GridLinesVisibility="All"
                             HeadersVisibility="Column"
                             VerticalScrollBarVisibility="Auto">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="이름" Binding="{Binding Name}" Width="*" MinWidth="150"/>
                            <DataGridTextColumn Header="생성일" Binding="{Binding CreatedAt, StringFormat='yyyy-MM-dd HH:mm'}" Width="120"/>
                            <DataGridTextColumn Header="사용횟수" Binding="{Binding UsageCount}" Width="80"/>
                            <DataGridTextColumn Header="마지막 사용" Binding="{Binding LastUsed, StringFormat='yyyy-MM-dd HH:mm'}" Width="120"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </GroupBox>
            
            <!-- 구분선 -->
            <GridSplitter Grid.Column="1" HorizontalAlignment="Stretch" 
                         Background="LightGray"/>
            
            <!-- 오른쪽: 미리보기 -->
            <GroupBox Grid.Column="2" Header="미리보기" Padding="10">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Visibility="{Binding HasSelectedItem, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <!-- 기본 정보 -->
                        <TextBlock Text="기본 정보" FontWeight="Bold" FontSize="14" Margin="0,0,0,5"/>
                        <Grid Margin="0,0,0,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <TextBlock Grid.Row="0" Grid.Column="0" Text="이름:" FontWeight="SemiBold" Margin="0,2"/>
                            <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding SelectedFileInfo.Name}" Margin="5,2"/>
                            
                            <TextBlock Grid.Row="1" Grid.Column="0" Text="생성일:" FontWeight="SemiBold" Margin="0,2"/>
                            <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding SelectedFileInfo.CreatedAt, StringFormat='yyyy-MM-dd HH:mm:ss'}" Margin="5,2"/>
                            
                            <TextBlock Grid.Row="2" Grid.Column="0" Text="사용횟수:" FontWeight="SemiBold" Margin="0,2"/>
                            <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding SelectedFileInfo.UsageCount}" Margin="5,2"/>
                            
                            <TextBlock Grid.Row="3" Grid.Column="0" Text="마지막 사용:" FontWeight="SemiBold" Margin="0,2"/>
                            <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding SelectedFileInfo.LastUsed, StringFormat='yyyy-MM-dd HH:mm:ss'}" Margin="5,2"/>
                        </Grid>
                        
                        <!-- 파일 정보 -->
                        <TextBlock Text="파일 설정" FontWeight="Bold" FontSize="14" Margin="0,0,0,5"/>
                        <Grid Margin="0,0,0,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <TextBlock Grid.Row="0" Grid.Column="0" Text="날짜/시간:" FontWeight="SemiBold" Margin="0,2"/>
                            <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding SelectedFileInfo.DateTime, StringFormat='yyyy-MM-dd HH:mm'}" Margin="5,2"/>
                            
                            <TextBlock Grid.Row="1" Grid.Column="0" Text="약어:" FontWeight="SemiBold" Margin="0,2"/>
                            <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding SelectedFileInfo.Abbreviation}" Margin="5,2"/>
                            
                            <TextBlock Grid.Row="2" Grid.Column="0" Text="제목:" FontWeight="SemiBold" Margin="0,2"/>
                            <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding SelectedFileInfo.Title}" Margin="5,2"/>
                            
                            <TextBlock Grid.Row="3" Grid.Column="0" Text="접미어:" FontWeight="SemiBold" Margin="0,2"/>
                            <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding SelectedFileInfo.Suffix}" Margin="5,2"/>
                            
                            <TextBlock Grid.Row="4" Grid.Column="0" Text="확장자:" FontWeight="SemiBold" Margin="0,2"/>
                            <TextBlock Grid.Row="4" Grid.Column="1" Text="{Binding SelectedFileInfo.Extension}" Margin="5,2"/>
                            
                            <TextBlock Grid.Row="5" Grid.Column="0" Text="출력 경로:" FontWeight="SemiBold" Margin="0,2"/>
                            <TextBox Grid.Row="5" Grid.Column="1" Text="{Binding SelectedFileInfo.OutputPath}" Margin="5,2" 
                                    IsReadOnly="True" BorderThickness="0" Background="Transparent"/>
                            
                            <TextBlock Grid.Row="6" Grid.Column="0" Text="템플릿 경로:" FontWeight="SemiBold" Margin="0,2"/>
                            <TextBox Grid.Row="6" Grid.Column="1" Text="{Binding SelectedFileInfo.TemplatePath}" Margin="5,2" 
                                    IsReadOnly="True" BorderThickness="0" Background="Transparent"/>
                        </Grid>
                        
                        <!-- 활성화 상태 -->
                        <TextBlock Text="항목 활성화" FontWeight="Bold" FontSize="14" Margin="0,0,0,5"/>
                        <Grid Margin="0,0,0,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <CheckBox Grid.Row="0" Grid.Column="0" IsChecked="{Binding SelectedFileInfo.IsDateTimeEnabled}" IsEnabled="False" Margin="0,2"/>
                            <TextBlock Grid.Row="0" Grid.Column="1" Text="날짜/시간 사용" Margin="5,2"/>
                            
                            <CheckBox Grid.Row="1" Grid.Column="0" IsChecked="{Binding SelectedFileInfo.IsAbbreviationEnabled}" IsEnabled="False" Margin="0,2"/>
                            <TextBlock Grid.Row="1" Grid.Column="1" Text="약어 사용" Margin="5,2"/>
                            
                            <CheckBox Grid.Row="2" Grid.Column="0" IsChecked="{Binding SelectedFileInfo.IsTitleEnabled}" IsEnabled="False" Margin="0,2"/>
                            <TextBlock Grid.Row="2" Grid.Column="1" Text="제목 사용" Margin="5,2"/>
                            
                            <CheckBox Grid.Row="3" Grid.Column="0" IsChecked="{Binding SelectedFileInfo.IsSuffixEnabled}" IsEnabled="False" Margin="0,2"/>
                            <TextBlock Grid.Row="3" Grid.Column="1" Text="접미어 사용" Margin="5,2"/>
                        </Grid>
                        
                        <!-- 문자열 교체 규칙 -->
                        <TextBlock Text="문자열 교체 규칙" FontWeight="Bold" FontSize="14" Margin="0,0,0,5"/>
                        <TextBlock Text="{Binding StringReplacementRulesText}" 
                                  FontSize="11" 
                                  Foreground="Gray"
                                  TextWrapping="Wrap"
                                  Margin="0,0,0,10"/>
                    </StackPanel>
                </ScrollViewer>
            </GroupBox>
        </Grid>
        
        <!-- 통계 정보 -->
        <Border Grid.Row="2" Background="#FFF5F5F5" 
                BorderBrush="#FFDDDDDD" BorderThickness="0,1,0,0" 
                Padding="10,5" Margin="0,20,0,0">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="전체 파일정보 수: " FontWeight="SemiBold"/>
                <TextBlock Text="{Binding TotalCount}" Margin="0,0,20,0"/>
                <TextBlock Text="선택됨: " FontWeight="SemiBold"/>
                <TextBlock Text="{Binding SelectedFileInfo.Name}" Foreground="#FF007ACC"/>
            </StackPanel>
        </Border>
        
        <!-- 하단 버튼 -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" 
                   HorizontalAlignment="Right" 
                   Margin="0,15,0,0">
            <Button Content="닫기" Click="CloseButton_Click" 
                   Style="{StaticResource SecondaryButton}"
                   Width="80"/>
        </StackPanel>
    </Grid>
</Window>